def hexagonal(num):
  for i in range(1, num + 1, 2):
    hexA = []
    row = ["\n"]
    length = i
    rowStart = length
    for i in range(length):
      row.append("O ")
    hexA.append(row)
    while len(hexA) < rowStart:
      row = ["\n"]
      length -= 1
      for i in range(length):
        row.append("O ")
      hexA.insert(0, row)
      hexA.append(row)
    elements = 0
    for i in hexA:
      for j in i:
        if j != "\n":
          elements += 1
    if elements == num:
      for row in hexA:
        for i in range(rowStart - len(row) + 1):
          row.insert(1, " ")
      hexB = ""
      for row in hexA:
        for element in row:
          hexB += element
      return hexB
  return "Invalid"

print(hexagonal(37))
